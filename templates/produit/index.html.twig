{% extends 'base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="{{ asset('js/produit.js') }}" type="text/javascript"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light portlet-fit ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-red"></i>
                        <span class="caption-subject font-red sbold uppercase">Gestion Des Produits</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="btn-group">
                                    <button id="add-product-btn" class="btn green" data-toggle="modal" href="#add-product-modal"> Ajouter un produit
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                        <thead>
                        <tr>
                            <th> Titre </th>
                            <th> Ic√¥ne </th>
                            <th> Image </th>
                            <th></th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for product in products %}
                            <tr data-id="{{ product.id }}">
                                <td> {{ product.title }} </td>
                                <td>
                                    {% if product.icon %}
                                        <div class="tiles">
                                            <div class="tile image">
                                                <div class="tile-body">
                                                    <img src="{{ asset('img/' ~ product.icon.path) }}" width="320" height="100">
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if product.image %}
                                        <div class="tiles">
                                            <div class="tile image double selected">
                                                <div class="tile-body">
                                                    <img src="{{ asset('img/' ~ product.image.path) }}" width="320" height="100">
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}
                                </td>
                                <td>
                                    <a class="edit" href="javascript:;"> Editer </a>
                                </td>
                                <td>
                                    <a class="delete" href="javascript:;"> Supprimer </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>
    <div class="modal fade" id="add-product-modal" tabindex="-1" role="add-product" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">Ajouter un produit</h4>
                </div>
                <div class="modal-body">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn dark btn-outline" data-dismiss="modal">Fermer</button>
                    <button type="button" class="btn green">Enregistrer</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
{% endblock %}
