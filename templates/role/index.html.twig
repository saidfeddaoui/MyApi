{% extends 'base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="{{ asset('js/role.js') }}" type="text/javascript"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light portlet-fit ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-red"></i>
                        <span class="caption-subject font-red sbold uppercase">{{ portlet_title }}</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="btn-group">
                                    <button id="add-slider-btn" class="btn green" data-toggle="modal" href="#add-slider-modal">
                                        Ajouter un rôle
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-hover table-bordered datatable" id="sample_editable_1">
                        <thead>
                        <tr>
                            <th>Code</th>
                            <th>Nom</th>
                            <th>Parents</th>
                            <th>Fils</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for role in roles %}
                            <tr data-id="{{ role.id }}">
                                <td>{{ role.role | replace({'ROLE_': ''}) }}</td>
                                <td>{{ role.name }}</td>
                                <td>
                                    {% for parent in role.parents %}
                                        {{ parent.role | replace({'ROLE_': ''}) }}
                                        {% if not loop.last %}, {% endif %}
                                    {% endfor %}
                                </td>
                                <td>
                                    {% for child in role.children %}
                                        {{ child.role | replace({'ROLE_': ''}) }}
                                        {% if not loop.last %}, {% endif %}
                                    {% endfor %}
                                </td>
                                <td>
                                    <a class="text-info bs-tooltip edit" data-id= "{{role.id}}" data-placement="top" data-original-title="Editer" title="Editer"><span style="font-size:1.5em;" class="glyphicon glyphicon-pencil"></span></a>
                                    <a class="text-danger bs-tooltip delete" data-id= "{{role.id}}" data-placement="top" data-original-title="Supprimer" title="Supprimer"><span style="font-size:1.5em;" class="glyphicon glyphicon-trash"></span></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>
    <div class="modal fade " tabindex="1" role="dialog" id="add-slider-modal" data-backdrop="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="myModalLabel">Ajouter un rôle:</h4>
                </div>
                <div class="modal-body">
                    <div class="form">{% include 'role/form.html.twig' with {'form': form} %}</div>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <div class="modal fade " tabindex="1" role="dialog" id="edit-slider-modal" data-backdrop="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="myModalLabel">Modifier ce rôle:</h4>
                </div>
                <div class="modal-body"><div class="form"></div></div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
{% endblock %}