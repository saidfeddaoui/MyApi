{% extends 'base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="{{ asset('js/version.js') }}" type="text/javascript"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light portlet-fit ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-red"></i>
                        <span class="caption-subject font-red sbold uppercase">Gestion des Versions</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="btn-group">
                                    <button id="add-version-btn" class="btn green" data-toggle="modal" href="#add-version-modal"> Ajouter nouvelle Version
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12" id="notifications">
                            {% for flashMessage in app.session.flashbag.get('notice') %}
                                <br>
                                <section>
                                    <div class="container" >
                                        <div class="row" >
                                            <div class="col-lg-12" >
                                                <div class="alert alert-warning alert-dismissable">
                                                    <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                                                    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">x</button>
                                                    {{ flashMessage|raw }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            {% endfor %}
                            {% for flashMessage in app.session.flashbag.get('success') %}
                                <br>
                                <section>
                                    <div class="container" >
                                        <div class="row" >
                                            <div class="col-lg-12" >
                                                <div class="alert alert-success alert-dismissable">
                                                    <i class="icon fa fa-check" ></i>
                                                    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">x</button>
                                                    {{ flashMessage|raw }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            {% endfor %}
                            {% for flashMessage in app.session.flashbag.get('error') %}
                                <br>
                                <section>
                                    <div class="container" >
                                        <div class="row" >
                                            <div class="col-lg-12" >
                                                <div class="alert alert-danger alert-dismissable">
                                                    <i class="fa fa-times-circle" aria-hidden="true"></i>
                                                    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">x</button>
                                                    {{ flashMessage|raw }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            {% endfor %}
                        </div>
                    </div>
                    <table class="table table-striped table-hover table-bordered datatable" id="sample_editable_1">
                        <thead>
                        <tr>
                            <th> Version courante </th>
                            <th> Version min </th>
                            <th> Message info </th>
                            <th> Message bloquer </th>
                            <th> Cache </th>
                            <th> Path </th>
                            <th> Code version </th>
                            <th> Os </th>
                            <th> Editer</th>
                            <th> Supprimer</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for element in data %}
                            <tr data-id="{{ element.id }}">
                                <td> {{ element.currentVersion }} </td>
                                <td> {{ element.minVersion }} </td>
                                <td> {{ element.msgInfo }} </td>
                                <td> {{ element.msgBloquer }} </td>
                                <td> {{ element.cache }} </td>
                                <td> {{ element.path }} </td>
                                <td> {{ element.versionCode }} </td>
                                <td> {{ element.os }} </td>
                                <td>
                                    <a class="btn btn-xs btn-primary bs-tooltip edit" data-id="{{ element.id }}"
                                       data-placement="top" data-original-title="Editer">
                                        <i class="glyphicon glyphicon-edit"></i>
                                    </a>
                                </td>
                                <td>
                                    <a class="btn btn-xs btn-danger bs-tooltip delete" data-id=" {{ element.id }}"
                                       data-placement="top" data-original-title="Supprimer">
                                        <i class="glyphicon glyphicon-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>

    <div class="modal fade " tabindex="1" role="dialog" id="add-version-modal" data-backdrop="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="myModalLabel">Ajouter une version:</h4>
                </div>
                <div class="modal-body">
                    <div class="form">{% include 'version/form.html.twig' with {'form': form} %}</div>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <div class="modal fade " tabindex="1" role="dialog" id="edit-version-modal" data-backdrop="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="myModalLabel">Modifier cette version:</h4>
                </div>
                <div class="modal-body"><div class="form"></div></div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

{% endblock %}
