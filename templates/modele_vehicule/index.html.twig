{% extends 'base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="{{ asset('js/modele.js') }}" type="text/javascript"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light portlet-fit ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-red"></i>
                        <span class="caption-subject font-red sbold uppercase">Gestion Modèles véhicules</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="btn-group">
                                    <button type="button" class="btn green" data-toggle="modal" data-target="#add-modele-modal">Ajouter Modèle Véhicule
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-hover table-bordered datatable" id="sample_editable_1">
                        <thead>
                        <tr>
                            <th> Modèle </th>
                            <th> Marque </th>
                            <th> Actions </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for modele in modeles %}
                            <tr data-id="{{ modele.id }}">
                                <td> {{ modele.nom }} </td>
                                <td>{% if modele.marque is not null %} {{ modele.marque.nom }} {% endif %}</td>
                                <td>
                                    <a class="btn btn-xs btn-primary bs-tooltip edit" data-id= "{{modele.id}}" data-placement="top" data-original-title="Editer" title="Modifier"><i class="glyphicon glyphicon-edit"></i></a>
                                    <a class="btn btn-xs btn-danger bs-tooltip delete" data-id= "{{modele.id}}" data-placement="top" data-original-title="Supprimer" title="Supprimer"><i class="glyphicon glyphicon-trash"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>

    <div class="modal fade " tabindex="1" role="dialog" id="add-modele-modal" data-backdrop="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="myModalLabel">Ajouter Modèle véhicule: </h4>
                </div>
                <div class="modal-body">
                    <div class="form">{% include 'modele_vehicule/form.html.twig' with {'form': form} %}</div>
                </div>

            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <div class="modal fade " tabindex="1" role="dialog" id="edit-modele-modal" data-backdrop="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="myModalLabel">Modifier Modèle véhicule:</h4>
                </div>
                <div class="modal-body"><div class="form"></div></div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
{% endblock %}
