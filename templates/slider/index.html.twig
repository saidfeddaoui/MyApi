{% extends 'base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="{{ asset('js/slider.js') }}" type="text/javascript"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light portlet-fit ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-red"></i>
                        <span class="caption-subject font-red sbold uppercase">Gestion Des Sliders</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="btn-group">
                                    <button id="add-slider-btn" class="btn green" data-toggle="modal" href="#add-slider-modal">
                                        Ajouter un élément
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-hover table-bordered datatable" id="sample_editable_1">
                        <thead>
                        <tr>
                            <th> Titre </th>
                            <th> العنوان </th>
                            <th> Image </th>
                            <th> Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in items %}
                            <tr data-id="{{ item.id }}">
                                <td> {{ item.title }} </td>
                                <td> {{ item.title_ar }} </td>
                                <td>
                                    {% if item.image %}
                                        <div >
                                            <img src="{{ asset('img/' ~ item.image.path) }}" class="product_img">
                                        </div>
                                    {% endif %}
                                </td>
                                <td>
                                    <a class="btn btn-xs btn-primary bs-tooltip edit" data-id= "{{item.id}}" data-placement="top" data-original-title="Editer"><i class="glyphicon glyphicon-edit" title="Modifier"></i></a>
                                    <a class="btn btn-xs btn-danger bs-tooltip delete" data-id= "{{item.id}}" data-placement="top" data-original-title="Supprimer"><i class="glyphicon glyphicon-trash" title="Supprimer"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>
    <div class="modal fade " tabindex="1" role="dialog" id="add-slider-modal" data-backdrop="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="myModalLabel">Ajouter un élément:</h4>
                </div>
                <div class="modal-body">
                    <div class="form">{% include 'slider/form.html.twig' with {'form': form} %}</div>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <div class="modal fade " tabindex="1" role="dialog" id="edit-slider-modal" data-backdrop="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="myModalLabel">Modifier cet élément:</h4>
                </div>
                <div class="modal-body"><div class="form"></div></div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
{% endblock %}
