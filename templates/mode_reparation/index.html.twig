{% extends 'base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="{{ asset('js/mode.js') }}" type="text/javascript"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light portlet-fit ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-red"></i>
                        <span class="caption-subject font-red sbold uppercase">Gestion Mode Réparation</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="btn-group">
                                    <button id="sample_editable_1_new" class="btn green" data-toggle="modal" href="#add-mode-modal"> Ajouter un mode
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-hover table-bordered datatable" id="modeDataTable">
                        <thead>
                        <tr>
                            <th> Titre </th>
                            <th> العنوان </th>
                            <th> Contenu </th>
                            <th> المحتوى </th>
                            <th> Image </th>
                            <th> Actions </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for mode in modes %}
                        <tr data-id="{{ mode.id }}">
                            <td> {{ mode.title }} </td>
                            <td> {{ mode.title_ar }} </td>
                            <td> {{ mode.content[0:120] }} </td>
                            <td> {{ mode.content_ar[0:120] }} </td>
                            <td>
                                {% if mode.image %}
                                    <div class="tiles">
                                        <div class="tile image double selected">
                                            <div class="tile-body">
                                                <img src="{{ asset('img/' ~ mode.image.path) }}" width="320" height="100">
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            </td>
                            <td>
                                <a class="btn btn-xs btn-primary bs-tooltip edit" data-id= "{{ mode.id }}" data-placement="top" data-original-title="Editer" title="Modifier">
                                    <i class="glyphicon glyphicon-edit"></i>
                                </a>
                                <a class="btn btn-xs btn-danger bs-tooltip delete" data-id=" {{ mode.id }}" data-placement="top" data-original-title="Supprimer" title="Supprimer">
                                    <i class="glyphicon glyphicon-trash"></i>
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>
    <div class="modal fade " tabindex="1" role="dialog" id="add-mode-modal" data-backdrop="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="myModalLabel">Ajouter un mode de réparation: </h4>
                </div>
                <div class="modal-body">
                    <div class="form">{% include 'Mode_reparation/form.html.twig' with {'form': form} %}</div>
                </div>

            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <div class="modal fade " tabindex="1" role="dialog" id="edit-mode-modal" data-backdrop="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="myModalLabel">Modifier ce mode de réparation:</h4>
                </div>
                <div class="modal-body"><div class="form"></div></div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
{% endblock %}