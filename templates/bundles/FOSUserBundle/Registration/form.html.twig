                    <div class='input-icon input-group'>
                        <i class="icon-lock"></i>
                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}})}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                <div class="col-md-4">
                    {{ form_label(form.group) }}
                </div>
