                    <div class='input-icon input-group'>
                        {{ form_widget(form.group, {'attr': {'class': 'form-control select2'}})}}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-md-4">
                    {{ form_label(form.roles) }}
                </div>
                <div class="col-md-8">
                    <div class='input-icon input-group'>
                        {{ form_widget(form.roles, {'attr': {'class': 'form-control select2'}})}}
