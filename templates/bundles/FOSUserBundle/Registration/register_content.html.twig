</div>

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase"> Liste des utilisateurs</span>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover table-checkable order-column datatable" id="sample_1">
                    <thead>
                    <tr>
                        <th> Utilisateur </th>
                        <th> Email </th>
                        <th> RÃ´le </th>
                        <th> Actions </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for key, user in users %}
                        <tr>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td class="hidden-xs hidden-sm">{{ user.group.name }}</td>
                            <td>
                                <a href="{{ path('administration_edit_user', {'id': user.id}) }}" class="text-info bs-tooltip edit" data-placement="top" data-original-title="Editer" data-original-title="Editer"><span style="font-size:1.5em;" class="glyphicon glyphicon-pencil"></span></a>
                                <a class="text-danger bs-tooltip remove" data-id= "{{user.id}}" data-placement="top" data-original-title="Supprimer" data-original-title="Supprimer"><span style="font-size:1.5em;" class="glyphicon glyphicon-trash"></span></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>