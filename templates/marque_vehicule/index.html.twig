{% extends 'base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="{{ asset('js/marque.js') }}" type="text/javascript"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light portlet-fit ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-red"></i>
                        <span class="caption-subject font-red sbold uppercase">Gestion marques véhicules</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="btn-group">
                                    <button id="sample_editable_1_new" class="btn green"> Ajouter Marque Véhicule
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-hover table-bordered datatable" id="sample_editable_1">
                        <thead>
                        <tr>
                            <th> Marque </th>
                            <th> Editer </th>
                            <th> Supprimer </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for marque in marques %}
                            <tr data-id="{{ marque.id }}">
                                <td> {{ marque.nom }} </td>
                                <td>
                                    <a class="edit" href="javascript:;" data-id= {{ marque.id }}> Editer </a>
                                </td>
                                <td>
                                    <a class="delete" href="javascript:;" data-id=" {{ marque.id }}"> Supprimer </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>
{% endblock %}
