{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="{{ asset('js/devis.js') }}" type="text/javascript"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light portlet-fit ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-red"></i>
                        <span class="caption-subject font-red sbold uppercase">Devis</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">

                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-hover table-bordered datatable" id="sample_editable_1">
                        <thead>
                        <tr>
                            <th> Nom </th>
                            <th> Prénom </th>
                            <th> Tél </th>
                            <th> email </th>
                            <th> civilite </th>
                            <th> Date de création </th>
                             <th>Mutuelle</th>
                            <th> Info Véhicule </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for element in data %}
                        <tr class="detail_devis" data-id="{{ element.id }}" style="cursor: pointer">
                            <td> {{ element.nom }} </td>
                            <td> {{ element.prenom }} </td>
                            <td> {{ element.tel }} </td>
                            <td> {{ element.email }} </td>
                            <td> {{ element.civilite }} </td>
                            <td> {{ element.createdAt | date('Y-m-d H:i:s') }} </td>
                            {% if element.devisAuto.societaire is not null %}
                                <td> {{ element.societaire.codeInsurance }} </td>
                            {% else %}
                                <td> Pas disponible </td>
                            {% endif %}

                            <td> <span style="font-size:1.5em;" class="glyphicon glyphicon-menu-hamburger"></span></td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>
{% endblock %}
