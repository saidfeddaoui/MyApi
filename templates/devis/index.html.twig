{% extends 'base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="{{ asset('js/devis.js') }}" type="text/javascript"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light portlet-fit ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-red"></i>
                        <span class="caption-subject font-red sbold uppercase">Devis</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">

                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-hover table-bordered datatable" id="sample_editable_1">
                        <thead>
                        <tr>
                            <th> Nom </th>
                            <th> Prénom </th>
                            <th> Tél </th>
                            <th> email </th>
                            <th> civilite </th>
                            <th> Marque </th>
                            <th> Pack </th>
                            <th> puissance </th>
                            <th> Combustion </th>
                            <th> Valeur neuf </th>
                            <th> Valeur venale </th>
                            <th> Valeur glace </th>
                            <th> Date mis en circulation </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for element in data %}
                        <tr data-id="{{ element.id }}">
                            <td> {{ element.nom }} </td>
                            <td> {{ element.prenom }} </td>
                            <td> {{ element.tel }} </td>
                            <td> {{ element.email }} </td>
                            <td> {{ element.civilite }} </td>
                            {% if element.marque is not null %}
                            <td> {{ element.marque.nom }} </td>
                            {% endif %}
                            {% if element.pack is not null %}
                            <td> {{ element.pack.code }} </td>
                            {% endif %}
                            <td> {{ element.puissance }} </td>
                            <td> {{ element.combustion }} </td>
                            <td> {{ element.vn }} </td>
                            <td> {{ element.vv }} </td>
                            <td> {{ element.vg }} </td>
                            <td> {{ element.dateMec | date('Y-m-d H:i:s') }} </td>

                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>
{% endblock %}
