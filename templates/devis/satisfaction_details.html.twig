{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href="{{ asset('css/detail_devis_auto.css') }}" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL PLUGINS -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL SCRIPTS -->

    <!-- END PAGE LEVEL SCRIPTS -->
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light portlet-fit ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-red"></i>
                        <span class="caption-subject font-red sbold uppercase">Devis satisfaction</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">

                        
                         <div class="general_details" data-id="{{element.id}}">
                            <div class="row">

                            {% if  element.auto=="DA" %}
                               <h4> <i class="fa fa-user font-{{ app.session.get('insuranceType').themeColor }}"></i>
                                    {% if element.devisAuto is not null %}
                                      {{ element.devisAuto.nom }} {{ element.devisAuto.prenom }}
                                    {% else %}
                                         inconnu
                                    {% endif %}
                                    {% if element.statut %}
                                        (Acceptée)</td>
                                    {% else %}
                                        (Rejetée)
                                    {% endif %}

                                </h4>

                                <div class="col-md-6">
                                    <p><span class="detail_label">Civilité : </span><span class="detail_info">
                                            {% if element.devisAuto.civilite is not null %}
                                            <input type="text"  name="civilite" disabled value="{{ element.devisAuto.civilite }}">
                                            {% else %}
                                              <input type="text"  name="civilite" disabled value="">
                                            {% endif %}
                                        </span>
                                    <p><span class="detail_label">Téléphone: </span>
                                        <span class="detail_info">
                                            <input type="text"  name="tel" disabled value="{{ element.devisAuto.tel }}">
                                        </span>
                                    </p>
                                    <p><span class="detail_label"> Email: </span>
                                        <span class="detail_info">
                                            <input type="text"  name="email" value="{{ element.devisAuto.email }}">
                                        </span>
                                    </p>
                                    <p><span class="detail_label">Pack : </span>
                                        <span class="detail_info">
                                            <input type="text"  name="pack" value="{{ element.devisAuto.pack.name }}">
                                        </span>
                                    </p>
                                </div>

                            {% elseif element.auto=="DH" %}
                                 <h4> <i class="fa fa-user font-{{ app.session.get('insuranceType').themeColor }}"></i>
                                    {% if element.devisHabitation is not null %}
                                      {{ element.devisHabitation.nom }} {{ element.devisHabitation.prenom }}
                                    {% else %}
                                         inconnu
                                    {% endif %}
                                    {% if element.statut %}
                                        (Acceptée)</td>
                                    {% else %}
                                        (Rejetée)
                                    {% endif %}

                                </h4>

                                <div class="col-md-6">
                                    <p><span class="detail_label">Civilité : </span><span class="detail_info">
                                            {% if element.devisHabitation.civilite is not null %}
                                            <input type="text" class="police" name="civilite" disabled value="{{ element.devisHabitation.civilite }}">
                                            {% else %}
                                              <input type="text"  name="civilite" disabled value="">
                                            {% endif %}
                                        </span>
                                    <p><span class="detail_label">Téléphone: </span>
                                        <span class="detail_info">
                                            <input type="text"  name="tel" disabled value="{{ element.devisHabitation.tel }}">
                                        </span>
                                    </p>
                                    <p><span class="detail_label"> Email: </span>
                                        <span class="detail_info">
                                            <input type="text"  name="email" value="{{ element.devisHabitation.email }}">
                                        </span>
                                    </p>
                                    <p><span class="detail_label">Pack : </span>
                                        <span class="detail_info">
                                            <input type="text"  name="pack" value="{{ element.devisHabitation.pack.name  }}">
                                        </span>
                                    </p>
                                </div>


                            {% endif %}


                                <div class="col-md-6">
                                    <p><span class="detail_label">Datede creation :</span>
                                        <span class="detail_info">
                                            <input type="text" class="nbi" name="prenbi" value="{{ element.dateCreation | date('Y-m-d H:i:s')  }}">
                                        </span>
                                    </p>
                                    
                                    <p><span class="detail_label">Datede d'écheance :</span>
                                        <span class="detail_info">
                                            <input type="text" class="nbi" name="prenbi" value="{{ element.echeanceDate | date('Y-m-d H:i:s')  }}">
                                        </span>
                                    </p>

                                    <p><span class="detail_label">Agence : </span>
                                        <span class="detail_info">
                                          <input type="text" name="agence" disabled value="{{ element.agence }}">
                                        </span>
                                     </p>

                                    <p>
                                    <span class="detail_label">Raison : </span>
                                    <span class="detail_info">
                                       <input type="text" name="raison" disabled value="{{ element.raison.title }}">
                                    </span>
                                    </p>
                                </div>
                            </div>



                </div>





                    </div>

                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>
{% endblock %}
