{% extends 'base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="{{ asset('js/devis_accepted.js') }}" type="text/javascript"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light portlet-fit ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-red"></i>
                        <span class="caption-subject font-red sbold uppercase">Devis Satisfaisants</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">

                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-hover table-bordered datatable" id="sample_editable_1">
                        <thead>
                        <tr>
                            <th> Date de creation </th>
                            <th> Date d'échéance </th>
                            <th> Agence </th>
                            <th> Raison </th>
                            <th> Commentaire </th>
                            <th> Statut </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for element in data %}
                        <tr data-id="{{ element.id }}">
                            {% if element.dateCreation is not null %}
                                <td> {{ element.dateCreation | date('Y-m-d H:i:s')  }} </td>
                            {% else %}
                                <td>Pas disponible </td>
                            {% endif %}
                            {% if element.echeanceDate is not null %}
                            <td> {{ element.echeanceDate | date('Y-m-d H:i:s')  }} </td>
                            {% else %}
                             <td>Pas disponible </td>
                            {% endif %}
                            {% if  element.agence is not null %}
                                <td>  {{ element.agence }} </td>
                            {% else %}
                                <td>Pas disponible </td>
                            {% endif %}
                            {% if  element.comment is not null %}
                                <td> {{ element.comment }} </td>
                            {% else %}
                                <td>Pas disponible </td>
                            {% endif %}
                            {% if   element.raison is not null %}
                                <td>  {{ element.raison.title }} </td>
                            {% else %}
                                <td> Pas disponible </td>
                            {% endif %}

                            {% if  element.statut   %}
                                <td> <i class="icon-dislike emodisLike"></i></td>
                            {% else %}
                                <td> <i class="icon-like emoLike"></i> </td>
                            {% endif %}

                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>
{% endblock %}
