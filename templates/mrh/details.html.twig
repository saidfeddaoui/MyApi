{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href="{{ asset('css/detail_devis_auto.css') }}" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL PLUGINS -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL SCRIPTS -->

    <!-- END PAGE LEVEL SCRIPTS -->
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light portlet-fit ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-red"></i>
                        <span class="caption-subject font-red sbold uppercase">Devis</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar general_details">
                        <div class="row">
                            <div class="col-md-12">
                            <h4> <i class="fa fa-user font-{{ app.session.get('insuranceType').themeColor }}"></i>
                                {% if  devisHabitation is not null %}
                                    {{ devisHabitation.civilite }}. {{ devisHabitation.nom }} {{ devisHabitation.prenom }}
                                {% else %}
                                    inconnu
                                {% endif %}
                            </h4>
                            </div>
                            <div class="col-md-6 general_details_devis" >

                                <p>
                                    <span class="detail_label">Proprieté : </span>
                                    <span class="detail_info">
                                        {% if devisHabitation.propriete is not null %}
                                            <input type="text" class="police" name="nom" disabled value="{{ devisHabitation.propriete.name }}">
                                        {% else %}
                                            <input type="text" class="police" name="nom" disabled value="">
                                        {% endif %}
                                     </span>
                                </p>
                                <p>
                                    <span class="detail_label">téléphone : </span>
                                    <span class="detail_info">
                                        {% if devisHabitation.tel is not null %}
                                            <input type="text" class="combustion" name="combustion" disabled value="{{ devisHabitation.tel }}">
                                        {% else %}
                                            <input type="text" class="combustion" name="combustion" disabled value="">
                                        {% endif %}
                                     </span>
                                </p>
                                <p>
                                    <span class="detail_label">Prime HT: </span>
                                    <span class="detail_info">
                                        {% if devisHabitation.primeHT is not null %}
                                            <input type="text" name="comment" disabled value="{{ devisHabitation.primeHT }}">
                                        {% else %}
                                            <input type="text" name="comment" disabled value="">
                                        {% endif %}
                                     </span>
                                </p>
                                <p>
                                    <span class="detail_label">Prime TTC: </span>
                                    <span class="detail_info">
                                        {% if devisHabitation.primeTTC is not null %}
                                            <input type="text" name="comment" disabled value="{{ devisHabitation.primeTTC }}">
                                        {% else %}
                                            <input type="text" name="comment" disabled value="">
                                        {% endif %}
                                     </span>
                                </p>


                            </div>

                            <!-- -->

                            <div class="col-md-6 general_details_devis" >

                                <p>
                                    <span class="detail_label">Email: </span>
                                    <span class="detail_info">
                                        {% if devisHabitation.email is not null %}
                                            <input type="text" class="vn" name="vn" disabled value="{{ devisHabitation.email }}">
                                        {% else %}
                                            <input type="text" class="vn" name="vn" disabled value="">
                                        {% endif %}
                                     </span>
                                </p>
                                <p>
                                    <span class="detail_label">Contenu  : </span>
                                    <span class="detail_info">
                                        {% if devisHabitation.contenu is not null %}
                                            <input type="text" class="vv" name="vv" disabled value="{{ devisHabitation.contenu }}">
                                        {% else %}
                                            <input type="text" class="vv" name="vv" disabled value="">
                                        {% endif %}
                                     </span>
                                </p>
                                <p>
                                    <span class="detail_label">Batiment : </span>
                                    <span class="detail_info">
                                        {% if devisHabitation.batiment is not null %}
                                            <input type="text" class="vg" name="vg" disabled value="{{ devisHabitation.batiment.value }}">
                                        {% else %}
                                            <input type="text" class="vg" name="vg" disabled value="">
                                        {% endif %}
                                     </span>
                                </p>

                                <p>
                                    <span class="detail_label">Catégorie : </span>
                                    <span class="detail_info">
                                        {% if devisHabitation.categorie is not null %}
                                            <input type="text" class="vg" name="vg" disabled value="{{ devisHabitation.categorie.name }}">
                                        {% else %}
                                            <input type="text" class="vg" name="vg" disabled value="">
                                        {% endif %}
                                     </span>
                                </p>

                            </div>
                            <!-- -->
                        </div>


                         <!-- garantie-->

                        {% if garanties | length > 0 %}

                            <div class="row">
                                  <div class="garantie top">
                                    <div class="caption">
                                        <i class="icon-settings font-red"></i>
                                        <span class="caption-subject font-red sbold uppercase">GARANTIE</span>
                                    </div>
                                  </div>
                                 {% for garantie in garanties %}
                                  <div class="garanties">
                                    <div class="col-md-8">
                                        <div class="cart">
                                            <div class="col-md-10">
                                               <p><strong>{{ garantie.garantie }} </strong></p> 
                                               {% if garantie.libOption  %}
                                                 <p class="small">{{ garantie.libOption }}</p>
                                               {% endif %}

                                            </div>
                                            <div class="col-md-2">
                                                 {% if garantie.acquise =="O"  %}
                                               <span class="label label-success pull-right"><strong>OUI </strong></span> 
                                               {% else %}
                                                <span class="label label-danger pull-right"><strong>NON </strong></span> 
                                               {% endif %}
                                            </div>
                                           
                                        </div>

                                    </div>
                                   </div>
                                {% endfor %}

                            </div>
 
                     {% endif %}
                <!--end garantie-->
                
                    </div>

                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>
{% endblock %}
